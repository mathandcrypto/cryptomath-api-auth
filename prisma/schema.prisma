datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AccessSession {
    id  Int      @id @default(autoincrement())
    userId  Int @unique
    accessSecret    String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @default(now())
}

model RefreshSession {
    id  Int      @id @default(autoincrement())
    userId  Int
    refreshSecret   String
    createdAt   DateTime @default(now())
}